<!DOCTYPE html>
<html>
<head>
   <meta charset="utf-8">
   <title>Dashboard SET-RN</title>
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <meta name="description" content="O Dashboard dos auditores da IVIA" />

   <link rel="stylesheet" href="~/Content/bootstrap.css" media="screen">
   <link rel="stylesheet" href="~/Content/bootstrap-override.css">
   <link rel="stylesheet" href="~/Content/font-awesome.min.css">
   <link rel="stylesheet" href="~/Content/impressao.css" media="print">
   <link href="~/Content/site.css" rel="stylesheet" />

   <script type="text/javascript" src="~/Scripts/modernizr-2.6.2.js"></script>
   <script type="text/javascript" src="https://www.google.com/jsapi"></script>

</head>
<body>
   <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
         <div class="navbar-header">
            <a href="@Url.Action("Index","Home")" class="navbar-brand"><img src="~/content/img/logo.png"></a>
         </div>
         <div class="navbar-collapse collapse navbar-responsive-collapse pull-right">
            <ul class="nav navbar-nav">
               @if (User.Identity.IsAuthenticated)
               {
                  <li>
                     <a href="#">
                        <span class="glyphicon glyphicon-user"></span>&nbsp;
                        @User.Identity.Name
                     </a>
                  </li>
                  @RenderSection("menu", false);
                  <li>
                     @using (Html.BeginForm("Logout", "IdentityAccess", FormMethod.Post, new { id="form-logout"}))
                     {
                        <div style="padding:19px">
                           <a href="#" onclick="document.getElementById('form-logout').submit();">
                              <span class="glyphicon glyphicon-log-out"></span>&nbsp;
                              Sair
                           </a>
                        </div>
                     }
                  </li>
               }
            </ul>
         </div>
      </div>
   </div>
   <div class="container body-content">
      @RenderBody()
   </div>

   @Scripts.Render("~/bundles/jquery")
   @Scripts.Render("~/bundles/bootstrap")
   @RenderSection("scripts", required: false)
</body>
</html>
