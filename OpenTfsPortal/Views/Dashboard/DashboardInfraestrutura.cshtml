@model OpenTfsPortal.Models.DashboardInfraViewModel

@{
   ViewBag.Title = "DashboardInfraestrutura";
}

<div class="container">
   @*<div class="page-header" id="banner">
      <div class="row">
         <div class="col-lg-8 col-md-7 col-sm-6">
            <h2>SOLICITAÇÕES APROVADAS PARA PRODUÇÃO</h2>
         </div>
      </div>
   </div>*@
   <div class="row">
      <div class="col-lg-4">
         <h3>
            SISTEMA <br />
            <small>para publicação</small>
         </h3>
         <hr />
      </div>
      <div class="col-lg-8">
         <h3>
            NOTIFICAR PUBLICAÇÃO <br />
            <small>selecione ação para notificar status da publicação</small>
         </h3>
         <hr />
      </div>
      @foreach (var item in @Model.ProjetosParaCompilacao)
      {
         <div class="col-lg-4">
            <h1>
               @item.Key.Name.ToUpper()
            </h1>
            <span class="badge">@item.Value</span> solicitações para publicação
         </div>
         <div class="col-lg-6">
            <h1>
               <a href="@Url.Action("MarcarProjetoPublicado", "Dashboard", new { id = @item.Key.ProjectId.Id })" class="btn btn-lg btn-success">
                  <span class="glyphicon glyphicon-upload"></span>&nbsp;PUBLICADO
               </a>
               <a href="#" class="btn btn-lg btn-danger">
                  <span class="glyphicon glyphicon-ban-circle"></span>&nbsp;FALHA NA PUBLICAÇÃO
               </a>
            </h1>
         </div>
         <div class="col-lg-12">
            <hr />
         </div>
      }
   </div>
</div>