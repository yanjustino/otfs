@model Otfs.ProjectManagement.Core.Domain.Model.BacklogItem.OtfsBacklogItem

@{
   var iteration = new { backlogItemId = @Model.BacklogItemId.Id, iteration = @Model.Iteration.Path };
}


@*botão de aprovação*@

@using(Html.BeginForm("Approve", "Dashboard", @iteration, FormMethod.Post))
{ 
    <div class="modal fade" id="ModalAprovacao" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" ng-init="init(@Model.BacklogItemId.Id)">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h2 class="modal-title" id="myModalLabel">

                        @*título da tarefa*@
                        @Model.BacklogItemId.Id : @Model.Title
                    </h2>
                </div>
                <div class="modal-body">
                    @*corpo da modal*@
                    <p>Deseja realmente aprovar esta solicitação?</p>
                </div>
                <div class="modal-footer">
                    @*botões da modal*@
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">Aprovar</button>
                </div>
            </div>
        </div>
    </div>
}